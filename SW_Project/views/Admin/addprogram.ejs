    <script>

        function validateForm() {
            var x = document.forms["nam"]["degree"].value;
            var y = document.forms["nam"]["branch"].value;
            var z = document.forms["nam"]["courses"].value;

            if ( x == "") {
            document.querySelector(".errtxt").textContent="Please Enter Degree";
            document.querySelector(".errtxt").style.display="flex";
            return false;
            }
            if(y == "")
            {
                document.querySelector(".errtxt").textContent="Please Enter Branch";
                document.querySelector(".errtxt").style.display="flex";
                return false;
            }
            if(z == "")
            {
                document.querySelector(".errtxt").textContent="Please select Courses";
                document.querySelector(".errtxt").style.display="flex";
                return false;
            }
        }
  
    </script>
