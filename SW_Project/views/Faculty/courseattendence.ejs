<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="css/faculty-attendance-update-p1.css">
    <script src="https://kit.fontawesome.com/300fc8e5c2.js" crossorigin="anonymous"></script>
    
    <script>

        function validateForm() {
           
            var a = document.forms["nam"]["course"];
            var b = document.getElementById("file-up").files.length == 0;

          
            if (a.selectedIndex == 0) {
                document.querySelector(".errtxt").textContent = "Please Select Course";
                document.querySelector(".errtxt").style.display = "flex";
                return false;
            }

            if (b) { 
                document.querySelector(".errtxt").textContent = "Please Upload File";
                document.querySelector(".errtxt").style.display = "flex";
                return false;
            }
          
        }

    </script>

</head>

<body>
    <div class="wrapper">
        <div class="upperbar">
            <div class="weblogoplace">
                <img src="img/logo.png" alt="not rendered" id="weblogoimg">
            </div>
            <div class="webnameplace">
                <div class="webname">
                    <p id="temp1">Student Information System</p>
                </div>
            </div>
        </div>
        <div class="downflex">
            <div class="sidenav">
                <div class="sidenavopt">
                    <ul>
                        <li><a href="/facultyhome" class="bcolor"><i class="fa-solid fa-house"></i> Home </a></li>
                        <li><a href="/viewfaculty" class="bcolor"><i class="fa-solid fa-user"></i> Faculty Details </a>
                        </li>
                        <li><a href="/coursegrade" class="bcolor"><i class="fa-solid fa-file"></i> Course Grade</a></li>
                        <li><a href="/courseattendence"><i class="fa-solid fa-clipboard"></i> Course Attendence </a>
                        </li>
                        <li><a href="/changepwdfaculty"><i class="fa-solid fa-key"></i> Change Password </a></li>
                        <li><a href="/logoutfaculty"><i class="fa-solid fa-right-to-bracket"></i> Logout </a></li>
                    </ul>
                </div>
                <div class="sidenavdown">
                    <div class="curruserlogo">

                    </div>
                    <div class="currusername">
                        <%= user[0].fullname %>
                    </div>
                </div>
            </div>

            <div class="content">

                <form action="/courseattendence" method="post" enctype="multipart/form-data" class="upper-form" onsubmit="return validateForm()" name="nam">
                    <table class="up-table">
                    <tr class="center-items" id="drop-1">
                        <td class="cl1" style="width: 30%;">
                            <select name="course" id="course-dropdown" class="dropmenu">

                                <option value="none" class="dropitems">Select Course</option>
                                <% for(var i=0;i<courses.length;i++) { %>
                                    <option class="dropitmes" value="<%= courses[i]._id %>">
                                        <%= courses[i].Course_Name %>
                                    </option>
                                    <% } %>
                            </select>
                        </td>

                        <td class="cl1" style="width: 30%;">
                            <center><input type="file" class="file-ip" name="excelfile" id="file-up"></center>
                        </td>
                        <td class="cl1" style="width: 30%;">
                            <div class="btn-place">
                                <button type="submit" class="btn"><b>Submit</b></button>
                            </div>
                        </td>

                    </tr>
                </table>

                </form>

                <div class="table-wrapper">
                    <table>
                        <thead>
                            <th style="width: 15%;">Sr No.</th>
                            <th style="width: 55%;">Course-Name</th>
                            <th style="width: 15%;">Code</th>
                            <th style="width: 15%;">Credit</th>
                        </thead>


                        <tbody>

                            <div class="temp-div">
                                <% for(var i=0; i<courses.length; i++) { %>
                                    <tr>
                                        <td class="leftpad">
                                            <%= i+1%>
                                        </td>
                                        <td class="center-items">
                                            <center>
                                                <%= courses[i].Course_Name%>
                                            </center>
                                        </td>
                                        <td class="center-items">
                                            <center>
                                                <%= courses[i].Course_code%>
                                            </center>
                                        </td>
                                        <td class="center-items">
                                            <center>
                                                <%= courses[i].Course_credit%>
                                            </center>
                                        </td>
                                    </tr>
                                    <% } %>

                            </div>
                        </tbody>
                    </table>
                </div>

                <div class="errplc">
                    <p class="errtxt">Please Enter Email Address</p>
                </div>

                <!-- <div class="btn-place">
                    <button type="button" class="btn"><b>Submit</b></button>
                </div> -->

                <!-- content     -->
            </div>


            <!-- downflex -->
        </div>

        <!-- wrapper -->
    </div>

</body>

</html>
</body>

</html>